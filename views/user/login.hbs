<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="/stylesheets/userReg.css">

<div class="container d-flex justify-content-center ">
  <div class="row main-form text-center jumbotron">
    <h3 class="row main-form text-center ">
      <p><strong>Login user</strong></p>
    </h3>
    <form method="POST" action="/login/user">
      <div class="form-group">
        <label for="email" class="cols-sm-2 control-label"><b>Email</b></label>
        <div class="cols-sm-10">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
            <input type="text" placeholder="Enter Email" name="email" id="email" pattern="^\S+@\S+$"
              title="Invalid email" class="form-control" required>
          </div>
        </div>
      </div>


      <div class="form-group">
        <label for="password" class="cols-sm-2 control-label"><b>Password</b></label>
        <div class="cols-sm-10">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
            <input type="password" placeholder="Enter Password" name="password" id="password" required
              class="form-control">
          </div>
        </div>
      </div>



      <br>
      <div class="text-xs-center">
        <button class="btn btn-block btn-primary" type="submit">Go</button>
      </div>

    </form>
  </div>
</div>
