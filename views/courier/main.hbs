    <label for="order">Содержимое заказа:</label>
    <textarea class="form-control" id="order" rows="3"></textarea>
  </div>


  <div class="form-group">
    <label for="exampleInputFile">Загрузить фотографию заказа</label>
    <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
    <small id="fileHelp" class="form-text text-muted">Вы можете загрузить фото Вашего заказа или иное.</small>
  </div>
  <div class="form-check">
    <label class="form-check-label">
      <input type="checkbox" class="form-check-input">
      Торг
    </label>
  </div>
  <button type="submit" class="btn btn-primary">РАЗМЕСТИТЬ ЗАЯВКУ</button>
</form>
