<button> <a href="/">РАЗМЕСТИТЬ ЗАЯВКУ</a></button>



<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Ресторан:</label>
    <input type="text" class="form-control" id="rest" aria-describedby="rest" placeholder="Ресторан">
  </div>
  <div class="form-group">
    <label for="addres">Текущий адрес:</label>
    <input type="text" class="form-control" id="addres" placeholder="адрес">
